= form_for @members_month do |f|
  - if @members_month.errors.any?
    #error_explanation
      h2 = "#{pluralize(@members_month.errors.count, "error")} prohibited this members_month from being saved:"
      ul
        - @members_month.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :member
    = f.text_field :member
  .field
    = f.label :month
    = f.text_field :month
  .field
    = f.label :cost
    = f.text_field :cost
  .actions = f.submit
