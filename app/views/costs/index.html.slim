ul.nav.nav-tabs
  - @groups.each do |group|
    - if @group.id == group.id
      li.active = link_to group.name, group_costs_path(group)
    -else
      li = link_to group.name, group_costs_path(group)

#example
  input v-model="msg" @change="handleChange"
  mycomponent
  mycomponent
  mycomponent

#costs
coffee:
  $ ->

    new Vue
      el: "#example"
      data:
        msg: "hello"
      methods:
        handleChange: ->
          @$broadcast("onChange",@msg)
      components:
        mycomponent:
          data: ->
            msg: ""
          template: '<div>{{msg}}</div>'
          events:
            onChange: (msg) -> @msg = msg

    VueFactory.create "costs"
